<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
    android:background="#006699"
                android:clickable="false">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout2">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/friends"
            android:textColor="#000000"
            android:id="@+id/Freinds"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:textAlignment="gravity"
            android:background="@drawable/borderviewa"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/todo"
            android:textColor="#000000"
            android:id="@+id/Todo"
            android:layout_row="8"
            android:layout_column="0"
            android:background="@drawable/borderadd"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Cal"
            android:textColor="#000000"
            android:id="@+id/Calender"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:background="@drawable/borderdel" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/other"
            android:textColor="#000000"
            android:id="@+id/button"
            android:layout_row="9"
            android:layout_column="0"
            android:background="@drawable/bordergal"
            />
    </GridLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/noto"
        android:layout_below="@+id/gridLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="93dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/TitleP"
        android:id="@+id/textView7"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:layout_below="@+id/gridLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"/>

</RelativeLayout>
